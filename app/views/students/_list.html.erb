<table class="table table-striped table-bordered table-hover dataTable">
  <thead>
    <tr>
      <th>#</th>      
      <th>Nome</th>
      <th>Registro</th>
      <th>Status</th>
      <th class="actions">&nbsp;</th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.id %></td>        
        <td><%= student.name %></td>
        <td><%= student.register_number %></td>
        <td><%= student.status_humanize %></td>
        <td class="actions">
          <div class="btn-group">
            <button type="button" class="btn btn-default btn-sm dropdown-toggle" data-toggle="dropdown"> 
              Ação <span class="caret"></span>
            </button>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to 'Alterar', edit_student_path(student) %></li> <li class="divider"></li>              
              <li><%= link_to 'Excluir', student, method: :delete, data: { confirm: 'Tem certeza?' } %></li>
            </ul>
          </div>        
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @students %>  