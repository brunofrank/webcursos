<h2 class="portlet-title">
  <u><%= plural_table_name %></u>
</h2>

<div class="second-action-btns">
  <%%= link_to 'Novo', new_<%= singular_table_name %>_path, class: "btn btn-sm btn-primary" %>  
</div>

<div id="list-container">
  <table class="table table-striped table-bordered table-hover dataTable">
    <thead>
      <tr>
        <th>#</th>      
<% attributes.reject(&:password_digest?).each do |attribute| -%>
  <th><%= attribute.human_name %></th>
<% end -%>
        <th class="actions">&nbsp;</th>
      </tr>
    </thead>

    <tbody>
      <%% @<%= plural_table_name %>.each do |<%= singular_table_name %>| %>
        <tr>
          <td><%%= <%= singular_table_name %>.id %></td>        
  <% attributes.reject(&:password_digest?).each do |attribute| -%>
          <td><%%= <%= singular_table_name %>.<%= attribute.name %> %></td>
  <% end -%>
          <td class="actions">
            <div class="btn-group">
              <button type="button" class="btn btn-default btn-sm dropdown-toggle" data-toggle="dropdown"> 
                Ação <span class="caret"></span>
              </button>
              <ul class="dropdown-menu" role="menu">
                <li><%%= link_to 'Alterar', edit_<%= singular_table_name %>_path(<%= singular_table_name %>) %></li> <li class="divider"></li>              
                <li><%%= link_to 'Excluir', <%= singular_table_name %>, method: :delete, data: { confirm: 'Tem certeza?' } %></li>
              </ul>
            </div>        
          </td>
        </tr>
      <%% end %>
    </tbody>
  </table>

  <%%= will_paginate @<%= plural_table_name %> %>  
  <%%= render partial: 'list' %>
</div>

<div class="second-action-btns">
  <%%= link_to 'Novo', new_<%= singular_table_name %>_path, class: "btn btn-sm btn-primary" %>  
</div>